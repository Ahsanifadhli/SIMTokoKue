<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <!-- WRAPPER UTAMA -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            android:orientation="vertical">

            <!-- TOOLBAR -->
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:elevation="0dp">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <ImageView
                        android:id="@+id/img_logo"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logo_toko_kue"
                        tools:ignore="ContentDescription" />


                </com.google.android.material.appbar.MaterialToolbar>
            </com.google.android.material.appbar.AppBarLayout>

            <!-- KONTEN SCROLL -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- HEADER ORANYE -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF9100"
                        android:orientation="vertical"
                        android:paddingBottom="24dp"
                        android:paddingTop="16dp">

                        <!-- WIDGET KURS (Dipertahankan) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/bg_rounded_white"
                            android:backgroundTint="#CCFFFFFF"
                            android:padding="8dp">
                            <TextView
                                android:id="@+id/tvKursDollar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Memuat Kurs..."
                                android:textStyle="bold"
                                android:textColor="#E65100"/>
                        </LinearLayout>

                        <!-- HORIZONTAL CARDS -->
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <!-- KARTU 1: REVENUE (AUTO SIZE TEXT) -->
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="6dp"
                                    app:cardBackgroundColor="#FFC107"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="3dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="12dp">
                                        <TextView
                                            android:text="Revenue"
                                            android:textColor="@color/black"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <androidx.cardview.widget.CardView
                                            android:layout_marginTop="8dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            app:cardCornerRadius="6dp">
                                            <!-- PERBAIKAN: autoSizeTextType -->
                                            <TextView
                                                android:id="@+id/tvRevenue"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:padding="4dp"
                                                android:text="Rp 0"
                                                android:textColor="#E65100"
                                                android:textStyle="bold"
                                                app:autoSizeTextType="uniform"
                                                app:autoSizeMinTextSize="12sp"
                                                app:autoSizeMaxTextSize="20sp"
                                                android:maxLines="1"/>
                                        </androidx.cardview.widget.CardView>
                                    </LinearLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <!-- KARTU 2: PROFIT -->
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="6dp"
                                    app:cardBackgroundColor="#FFC107"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="3dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="12dp">
                                        <TextView
                                            android:text="Profit"
                                            android:textColor="@color/black"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <androidx.cardview.widget.CardView
                                            android:layout_marginTop="8dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            app:cardCornerRadius="6dp">
                                            <TextView
                                                android:id="@+id/tvProfit"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:padding="4dp"
                                                android:text="Rp 0"
                                                android:textColor="#2E7D32"
                                                android:textStyle="bold"
                                                app:autoSizeTextType="uniform"
                                                app:autoSizeMinTextSize="12sp"
                                                app:autoSizeMaxTextSize="20sp"
                                                android:maxLines="1"/>
                                        </androidx.cardview.widget.CardView>
                                    </LinearLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <!-- KARTU 3: EXPENSE -->
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="6dp"
                                    app:cardBackgroundColor="#FFC107"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="3dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="12dp">
                                        <TextView
                                            android:text="Expense"
                                            android:textColor="@color/black"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <androidx.cardview.widget.CardView
                                            android:layout_marginTop="8dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            app:cardCornerRadius="6dp">
                                            <TextView
                                                android:id="@+id/tvExpense"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:padding="4dp"
                                                android:text="Rp 0"
                                                android:textColor="#C62828"
                                                android:textStyle="bold"
                                                app:autoSizeTextType="uniform"
                                                app:autoSizeMinTextSize="12sp"
                                                app:autoSizeMaxTextSize="20sp"
                                                android:maxLines="1"/>
                                        </androidx.cardview.widget.CardView>
                                    </LinearLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <!-- KARTU 4: INCOME -->
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="6dp"
                                    app:cardBackgroundColor="#FFC107"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="3dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="12dp">
                                        <TextView
                                            android:text="Net Income"
                                            android:textColor="@color/black"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <androidx.cardview.widget.CardView
                                            android:layout_marginTop="8dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="50dp"
                                            app:cardCornerRadius="6dp">
                                            <TextView
                                                android:id="@+id/tvIncome"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:padding="4dp"
                                                android:text="Rp 0"
                                                android:textColor="#1565C0"
                                                android:textStyle="bold"
                                                app:autoSizeTextType="uniform"
                                                app:autoSizeMinTextSize="12sp"
                                                app:autoSizeMaxTextSize="20sp"
                                                android:maxLines="1"/>
                                        </androidx.cardview.widget.CardView>
                                    </LinearLayout>
                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>

                    <!-- AREA ANALISIS (FILTER & GRAFIK) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Judul & Filter -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Analisis Toko"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <!-- TOMBOL FILTER -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnFilterChart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Filter Tanggal"
                                android:textSize="12sp"
                                app:icon="@drawable/ic_search"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvDateRange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Menampilkan: Semua Waktu"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginBottom="16dp"/>

                        <!-- HORIZONTAL SCROLL UNTUK 2 GRAFIK -->
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:clipToPadding="false">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <!-- GRAFIK A: TOP 3 PRODUK -->
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="320dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="2dp"
                                    app:strokeColor="#E0E0E0"
                                    app:strokeWidth="1dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="16dp">
                                        <TextView
                                            android:text="Top 3 Produk Terlaris"
                                            android:textStyle="bold"
                                            android:textColor="@color/black"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                        <com.github.mikephil.charting.charts.BarChart
                                            android:id="@+id/chartProducts"
                                            android:layout_width="match_parent"
                                            android:layout_height="220dp"
                                            android:layout_marginTop="12dp"/>
                                    </LinearLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <!-- GRAFIK B: PEMASUKAN VS PENGELUARAN -->
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="320dp"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="2dp"
                                    app:strokeColor="#E0E0E0"
                                    app:strokeWidth="1dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="16dp">
                                        <TextView
                                            android:text="Keuangan (In vs Out)"
                                            android:textStyle="bold"
                                            android:textColor="@color/black"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                        <com.github.mikephil.charting.charts.BarChart
                                            android:id="@+id/chartFinance"
                                            android:layout_width="match_parent"
                                            android:layout_height="220dp"
                                            android:layout_marginTop="12dp"/>
                                    </LinearLayout>
                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>
                        </HorizontalScrollView>

                    </LinearLayout>

                    <!-- Footer Space -->
                    <View android:layout_width="match_parent" android:layout_height="80dp"/>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <!-- FAB TRANSAKSI -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="24dp"
            android:text="Transaksi Baru"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_add"
            app:iconTint="@android:color/white"
            app:backgroundTint="#E65100" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- SIDEBAR -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>