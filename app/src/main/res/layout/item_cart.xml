<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_rounded_white"
    android:layout_marginBottom="4dp">

    <!-- Nama Produk & Harga -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCartName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Kue"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvCartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@10.000 x 2"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Subtotal -->
    <TextView
        android:id="@+id/tvCartSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 20.000"
        android:textStyle="bold"
        android:textColor="#E65100"
        android:layout_marginEnd="12dp"/>

    <!-- Tombol Hapus dari Keranjang -->
    <ImageView
        android:id="@+id/btnRemoveCart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#F44336"
        android:contentDescription="Hapus item" />

</LinearLayout>